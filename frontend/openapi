---
openapi: 3.1.0
components:
  schemas:
    FileMetadata:
      type: object
      properties:
        name:
          type: string
        path:
          type: string
        hash:
          type: string
        summary:
          type: string
paths:
  /fileSummary:
    post:
      requestBody:
        content:
          text/plain:
            schema:
              type: string
        required: true
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                $ref: "#/components/schemas/FileMetadata"
      summary: Get File Summary
      tags:
      - Files Resource
  /searchFiles:
    post:
      requestBody:
        content:
          text/plain:
            schema:
              type: string
        required: true
      responses:
        "200":
          description: OK
          content:
            application/json:
              schema:
                type: array
                items:
                  $ref: "#/components/schemas/FileMetadata"
      summary: Search Files
      tags:
      - Files Resource
info:
  title: backend API
